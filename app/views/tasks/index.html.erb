<h1>タスク一覧</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>タスク名</th>
      <th></th> <!-- この行を追加 -->
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= link_to "編集", edit_task_path(task) %></td> <!-- 追加 -->
      </tr>
    <% end %>
  </tbody>
</table>
<div class="mt-3 mb-3">
  <%= link_to "追加", new_task_path, class: "btn btn-primary" %>
</div>
